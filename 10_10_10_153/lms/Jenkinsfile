pipeline {
    agent { label '153_giao_viec' }

    parameters {
        choice(name: 'ACTION', choices: ['restart', 'start', 'stop'], description: 'H√†nh ƒë·ªông')
    } // ƒë√≥ng parameters

    environment  {
        GIT_REPO = "https://github.com/thonguyenduc2010/odoo18.git"
        DB_NAME = "tai_lieu_y_khoa"
        /* TELEGRAM_BOT_TOKEN = "AAHzH1m5fC_e4x1MdVeJl8aF-llVNtbjNpw"
        TELEGRAM_CHAT_ID = "-4064083384" */
    } // ƒë√≥ng environment

    stages {
        stage('Check action') {
            steps {
                script {
                    env.ACTION = params.ACTION?.trim() ?: 'restart'
                    echo " ACTION selected: ${env.ACTION}"
                }
            }
        } // ƒë√≥ng stage Check action

        stage('Checkout code') {
            steps {
                git branch: env.Branch_Name,
                credentialsId: env.Git_Credentials_Id,
                url: "${GIT_REPO}"
            }
        } // ƒë√≥ng stage checkout code

        stage('Get Commit Info') {
            steps {
                script {
                    def commitHash = sh(script: "git rev-parse HEAD", returnStdout: true).trim()
                    def commitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()
                    def author = sh(script: "git log -1 --pretty=format:'%an'", returnStdout: true).trim()

                    echo "Commit Hash: ${commitHash}"
                    echo "Commit Message: ${commitMessage}"
                    echo "Author: ${author}"
                }

            }
        } // ƒë√≥ng get commit info

        stage('Deploy'){
            steps {
                script {
                if (env.ACTION == "start") {
                    echo "First deployment"
                    sh """
                        mv docker-compose.yml.example docker-compose.yml
                        mv etc/odoo.conf.example etc/odoo.conf

                        sudo mkdir -p data pg_data
                        sudo chown -R $USER entrypoint.sh data pg_data etc
                        sudo chmod -R 777 entrypoint.sh
                        sudo chmod -R 777 data pg_data etc

                        docker-compose up -d
                    """
                    sendTelegramMessage("üöÄ App t√†i li·ªáu y khoa ƒë√£ ƒë∆∞·ª£c tri·ªÉn khai th√†nh c√¥ng!")
                } else if ( env.ACTION == 'restart') {
                    echo "‚ôªÔ∏è Restarting application"
                    sh "docker-compose restart"
                    sendTelegramMessage("‚ôªÔ∏è App Loyalty Kangnam ƒë√£ ƒë∆∞·ª£c c·∫≠p nh·∫≠t v√† restart!")
                } else {
                    echo "‚õî Stopping application..."
                    sh "docker-compose down"
                    sendTelegramMessage("‚õî App Loyalty Kangnam ƒë√£ b·ªã d·ª´ng!")
                }
            }
            }
        } // ƒë√≥ng stage deploy

    } // ƒë√≥ng stages

    post {
        success {
            script {
                sendTelegramMessage("‚úÖ Pipeline job tai_lieu_y_khoa ƒë√£ ch·∫°y th√†nh c√¥ng!")
            }
        }
        failure {
            script {
                sendTelegramMessage("‚ùå Pipeline job tai_lieu_y_khoa ƒë√£ g·∫∑p l·ªói! Ki·ªÉm tra log.")
            }
        }
    } // ƒë√≥ng post
}

def sendTelegramMessage(String message) {
    sh """
        curl -s -X POST "https://api.telegram.org/bot6102275063:${env.TELEGRAM_BOT_TOKEN}/sendMessage" \
        -d chat_id=${env.TELEGRAM_CHAT_ID} \
        -d text="${message}"
    """
} // ƒë√≥ng h√†m sendTelegramMessage